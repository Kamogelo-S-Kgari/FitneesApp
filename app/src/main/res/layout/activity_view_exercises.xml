<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/khetho"
    tools:context=".ViewExercises">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginEnd="10sp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60sp"
                android:contentDescription="@string/update_todo"
                android:src="@drawable/ic_jumping_rope"
                tools:ignore="ObsoleteLayoutParam" />

                <Button
                    android:id="@+id/btn_stretch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40sp"
                    android:background="@drawable/button_background"
                    android:text="Stretch"
                    android:textAllCaps="false"
                    android:textColor="@color/login_form_details_medium"/>

                <Button
                    android:id="@+id/btn_pushup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/button_background"
                    android:text="Push up"
                    android:textAllCaps="false"
                    android:textColor="@color/login_form_details_medium"/>

                <Button
                    android:id="@+id/btn_situp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/button_background"
                    android:text="Sit up"
                    android:textAllCaps="false"
                    android:textColor="@color/login_form_details_medium"/>

                <Button
                    android:id="@+id/btn_squat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/button_background"
                    android:text="Squat"
                    android:textAllCaps="false"
                    android:textColor="@color/login_form_details_medium"/>

                <Button
                    android:id="@+id/btn_jog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/button_background"
                    android:text="Jog"
                    android:textAllCaps="false"
                    android:textColor="@color/login_form_details_medium"/>

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/button_background"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textColor="@color/login_form_details_medium"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>